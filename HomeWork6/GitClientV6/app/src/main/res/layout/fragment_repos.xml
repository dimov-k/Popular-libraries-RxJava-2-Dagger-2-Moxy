<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_repos_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text24"
        android:textColor="@android:color/black"
        android:padding="@dimen/pad16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_repos_description"

        tools:text="Name" />
    <TextView
        android:id="@+id/tv_repos_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text24"
        android:textColor="@android:color/black"
        android:padding="@dimen/pad16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_repos_name"
        app:layout_constraintBottom_toTopOf="@id/tv_repos_language"

        tools:text="Description" />
    <TextView
        android:id="@+id/tv_repos_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text24"
        android:textColor="@android:color/black"
        android:padding="@dimen/pad16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_repos_description"
        app:layout_constraintBottom_toTopOf="@id/tv_repos_forks"
        tools:text="Language" />
    <TextView
        android:id="@+id/tv_repos_forks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text24"
        android:textColor="@android:color/black"
        android:padding="@dimen/pad16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_repos_language"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:text="Forks" />
</androidx.constraintlayout.widget.ConstraintLayout>